<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Klarity.ProductSearchPage"
             Title="Search Products">
    <StackLayout Padding="10">

        <SearchBar Placeholder="Hunting for deals? Type away!"
                   x:Name="GoogleSearchBar"
                   SearchButtonPressed="OnGoogleSearch" />

        <!-- WebView to display Google search results -->
        <WebView x:Name="GoogleWebView"
                 VerticalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>